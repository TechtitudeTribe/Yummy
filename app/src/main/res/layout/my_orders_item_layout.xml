<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        app:cardCornerRadius="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:translationZ="1dp">
        <RelativeLayout
            android:id="@+id/my_order_item_relative_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/creative_green">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="8dp">
                <TextView
                    android:id="@+id/my_order_item_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Veg Burger"
                    android:textColor="@color/smoky_black"
                    android:textSize="15sp"
                    android:gravity="left"
                    android:textStyle="bold"
                    android:layout_marginRight="10dp"
                    android:maxLines="1"
                    android:layout_marginTop="0dp"
                    android:fontFamily="serif"/>
                <TextView
                    android:id="@+id/my_order_item_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Item Description"
                    android:textColor="@color/white"
                    android:maxLines="1"
                    android:textSize="12sp"
                    android:layout_marginRight="10dp"
                    android:fontFamily="serif"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"/>
            <LinearLayout
                android:layout_alignParentBottom="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="45dp"
                android:layout_marginBottom="8dp">
                <TextView
                    android:id="@+id/my_order_item_placed_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Order Placed on 18 Dec"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:fontFamily="serif"/>
                <TextView
                    android:id="@+id/my_order_item_total_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="for Amount Rs. 000"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:gravity="left"
                    android:layout_marginTop="0dp"
                    android:fontFamily="serif"/>
            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:translationZ="5dp"
        app:cardCornerRadius="40dp"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true">
        <TextView
            android:id="@+id/my_order_item_order_number"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="1"
            android:textSize="40sp"
            android:textColor="@color/creative_green"
            android:textStyle="bold"
            android:fontFamily="serif"
            android:gravity="center"
            android:background="@drawable/circular_background"
            android:backgroundTint="@color/white" />
    </androidx.cardview.widget.CardView>

</RelativeLayout>