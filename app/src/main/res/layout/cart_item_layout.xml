<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:id="@+id/cart_item_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="10dp"
        app:cardCornerRadius="20dp"
        android:layout_marginBottom="30dp">
        <RelativeLayout
            android:id="@+id/cart_item_main_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/creative_green">
            <TextView
                android:id="@+id/cart_item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Item Name"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:fontFamily="serif"
                android:maxLines="1"
                android:gravity="right"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="135dp"/>


                    <LinearLayout
                        android:id="@+id/cart_item_description_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:paddingTop="10dp"
                        android:layout_marginTop="80dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="30dp"
                        android:paddingBottom="10dp"
                        android:orientation="vertical"
                        android:background="@drawable/text_background"
                        android:backgroundTint="@color/white">
                        <TextView
                            android:id="@+id/cart_item_quantity"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Quantity : "
                            android:fontFamily="serif"
                            android:textSize="13sp"
                            android:textColor="@color/creative_green" />
                        <TextView
                            android:id="@+id/cart_item_description"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Item Description"
                            android:fontFamily="serif"
                            android:textSize="13sp"
                            android:textColor="@color/creative_green" />
                    </LinearLayout>

            <LinearLayout
                android:id="@+id/cart_item_price_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="40dp">
                <TextView
                    android:id="@+id/cart_item_price_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="\u0040  Rs."
                    android:fontFamily="serif"
                    android:layout_marginRight="2dp"
                    android:textColor="@color/white"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/cart_item_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="000"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:fontFamily="serif" />
            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/biography_read_more_layout"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:translationZ="3dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="70dp"
        android:layout_alignBottom="@+id/cart_item_card"
        app:cardCornerRadius="25dp"
        android:translationY="20dp">
        <RelativeLayout
            android:id="@+id/cart_item_delete_layout"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:padding="5dp">
            <ImageView
                android:id="@+id/cart_item_delete"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_delete"
                app:tint="@color/creative_green"
                android:layout_centerInParent="true" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        android:translationZ="5dp"
        android:layout_marginLeft="40dp">
        <ImageView
            android:id="@+id/cart_item_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/veg_pizza"
            android:scaleType="fitXY" />
    </androidx.cardview.widget.CardView>


</RelativeLayout>