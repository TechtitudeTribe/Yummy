<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CartItemDescriptionActivity">


    <TextView
        android:id="@+id/cart_item_description_image_url"
        android:layout_width="wrap_content"
        android:visibility="invisible"
        android:layout_height="wrap_content"/>


    <RelativeLayout
        android:id="@+id/cart_item_description_header"
        android:layout_width="match_parent"
        android:layout_marginTop="30dp"
        android:layout_height="220dp">
        <RelativeLayout
            android:layout_width="250dp"
            android:layout_height="220dp"
            android:layout_marginLeft="20dp">
            <ImageView
                android:layout_width="250dp"
                android:layout_height="220dp"
                android:src="@drawable/shape"
                android:scaleType="fitXY"
                app:tint="@color/smoky_black" />
            <androidx.cardview.widget.CardView
                android:layout_width="160dp"
                android:layout_height="160dp"
                app:cardCornerRadius="20dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true">
                <ImageView
                    android:id="@+id/cart_item_description_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"/>
                <ProgressBar
                    android:id="@+id/cart_item_description_progress_bar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:indeterminateTint="@color/white"
                    android:layout_gravity="center"/>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>
        <LinearLayout
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/text_background"
            android:backgroundTint="@color/smoky_black"
            android:translationZ="5dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/cart_item_decrease"
                android:visibility="visible"
                android:layout_width="18dp"
                android:layout_height="26dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_baseline_minus"
                app:tint="@color/white"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"/>
            <View
                android:id="@+id/cart_item_view_one"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_height="2dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@color/creative_yellow_dark"/>
            <TextView
                android:id="@+id/cart_item_description_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="1"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:fontFamily="serif" />
            <View
                android:id="@+id/cart_item_view_two"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_height="2dp"
                android:background="@color/creative_yellow_dark"/>
            <ImageView
                android:id="@+id/cart_item_increase"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_baseline_add"
                android:layout_gravity="center_horizontal"
                app:tint="@color/white"
                android:layout_margin="5dp"/>
        </LinearLayout>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/cart_item_description_details"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/cart_item_description_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/cart_item_description_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="Item Name"
            android:layout_toLeftOf="@+id/cart_item_description_price"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:fontFamily="serif"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/cart_item_description_des"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Item Description"
            android:layout_below="@+id/cart_item_description_price"
            android:textColor="@color/white"
            android:fontFamily="serif"
            android:textSize="14sp"/>
        <TextView
            android:id="@+id/cart_item_description_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="000"
            android:textStyle="bold"
            android:drawableLeft="@drawable/ic_india_rupee_symbol"
            android:drawableTint="@color/white"
            android:drawablePadding="2dp"
            android:layout_alignParentRight="true"
            android:textColor="@color/white"
            android:fontFamily="serif"
            android:textSize="16sp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/cart_fragment_address_list_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/cart_item_description_details"
        android:background="@drawable/text_background"
        android:backgroundTint="@color/white"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:translationY="20dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:translationZ="5dp">
        <TextView
            android:id="@+id/no_address_found"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:text="No Address Found...\nAdd an address first\nProfile - Address - Add new address"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="4dp"
            android:textSize="14sp"
            android:textColor="@color/smoky_black"
            android:fontFamily="serif"/>
        <FrameLayout
            android:id="@+id/cart_fragment_address_list_frame"
            android:layout_marginTop="0dp"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choose an address :"
                android:layout_gravity="center_horizontal"
                android:fontFamily="serif"
                android:textSize="14sp"
                android:layout_margin="10dp"
                android:textColor="@color/smoky_black"/>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_marginTop="30dp"
                android:id="@+id/cart_fragment_address_list"
                android:layout_width="match_parent"
                android:layout_marginBottom="55dp"
                android:layout_height="match_parent"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Go for Checkout"
                android:layout_gravity="bottom"
                android:fontFamily="serif"
                android:textColor="@color/white"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/text_background"
                android:backgroundTint="@color/creative_yellow_dark"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center_horizontal"/>
        </FrameLayout>
        <ProgressBar
            android:id="@+id/cart_fragment_address_list_progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminateTint="@color/smoky_black"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

</RelativeLayout>