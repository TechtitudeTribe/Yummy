<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MenuItemActivity">

    <RelativeLayout
        android:id="@+id/menu_item_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:src="@drawable/header"
            android:scaleType="fitXY"
            app:tint="@color/smoky_black"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My\nMenu"
            android:textColor="@color/creative_yellow_dark"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:fontFamily="serif"
            android:layout_marginTop="55dp"/>
        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/ic_menu_books"
            android:padding="10dp"
            android:translationZ="5dp"
            app:tint="@color/white"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/circular_background"
            android:backgroundTint="@color/creative_yellow_dark"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <HorizontalScrollView
        android:id="@+id/horizontal_menu_scroll_view"
        android:layout_width="match_parent"
        android:layout_below="@+id/menu_item_header"
        android:layout_height="110dp"
        android:layout_marginTop="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/quick_bites"
                android:layout_width="80dp"
                android:translationZ="3dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"
                android:layout_height="100dp"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                android:background="@drawable/layout_background"
                android:backgroundTint="@color/creative_yellow_dark">
                <ImageView
                    android:id="@+id/quick_bites_image"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/bestseller"
                    app:tint="@color/smoky_black"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:id="@+id/quick_bites_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quick Bites"
                    android:layout_marginTop="3dp"
                    android:textSize="13sp"
                    android:textColor="@color/smoky_black"
                    android:fontFamily="serif"
                    android:layout_gravity="center_horizontal"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/sweets"
                android:layout_width="80dp"
                android:translationZ="3dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_height="100dp"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                android:background="@drawable/layout_background"
                android:backgroundTint="@color/creative_yellow_dark">
                <ImageView
                    android:id="@+id/sweets_image"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/sweets"
                    app:tint="@color/white"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:id="@+id/sweets_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sweets"
                    android:layout_marginTop="3dp"
                    android:textSize="13sp"
                    android:textColor="@color/white"
                    android:fontFamily="serif"
                    android:layout_gravity="center_horizontal"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/drinks"
                android:layout_width="80dp"
                android:translationZ="3dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_height="100dp"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                android:background="@drawable/layout_background"
                android:backgroundTint="@color/creative_yellow_dark">
                <ImageView
                    android:id="@+id/drinks_image"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/drinks"
                    app:tint="@color/white"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:id="@+id/drinks_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Drinks"
                    android:layout_marginTop="3dp"
                    android:textSize="13sp"
                    android:textColor="@color/white"
                    android:fontFamily="serif"
                    android:layout_gravity="center_horizontal"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/pizza"
                android:layout_width="80dp"
                android:translationZ="3dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_height="100dp"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                android:background="@drawable/layout_background"
                android:backgroundTint="@color/creative_yellow_dark">
                <ImageView
                    android:id="@+id/pizza_image"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/pizza"
                    app:tint="@color/white"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:id="@+id/pizza_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pizza"
                    android:layout_marginTop="3dp"
                    android:textSize="13sp"
                    android:textColor="@color/white"
                    android:fontFamily="serif"
                    android:layout_gravity="center_horizontal"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/non_veg"
                android:layout_width="80dp"
                android:translationZ="3dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="15dp"
                android:layout_height="100dp"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                android:background="@drawable/layout_background"
                android:backgroundTint="@color/creative_yellow_dark">
                <ImageView
                    android:id="@+id/non_veg_image"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/non_veg"
                    app:tint="@color/white"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:id="@+id/non_veg_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Non-Veg"
                    android:layout_marginTop="3dp"
                    android:textSize="13sp"
                    android:textColor="@color/white"
                    android:fontFamily="serif"
                    android:layout_gravity="center_horizontal"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/veg"
                android:layout_width="80dp"
                android:translationZ="3dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"
                android:layout_height="100dp"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                android:background="@drawable/layout_background"
                android:backgroundTint="@color/creative_yellow_dark">
                <ImageView
                    android:id="@+id/veg_image"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/veg"
                    app:tint="@color/white"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:id="@+id/veg_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Veg"
                    android:layout_marginTop="3dp"
                    android:textSize="13sp"
                    android:textColor="@color/white"
                    android:fontFamily="serif"
                    android:layout_gravity="center_horizontal"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/extra"
                android:layout_width="80dp"
                android:translationZ="3dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_height="100dp"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                android:background="@drawable/layout_background"
                android:backgroundTint="@color/creative_yellow_dark">
                <ImageView
                    android:id="@+id/extra_image"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/fast_food"
                    app:tint="@color/white"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:id="@+id/extra_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Extras"
                    android:layout_marginTop="3dp"
                    android:textSize="13sp"
                    android:textColor="@color/white"
                    android:fontFamily="serif"
                    android:layout_gravity="center_horizontal"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/dairy"
                android:layout_width="80dp"
                android:translationZ="3dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_height="100dp"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                android:background="@drawable/layout_background"
                android:backgroundTint="@color/creative_yellow_dark">
                <ImageView
                    android:id="@+id/dairy_image"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/dairy"
                    app:tint="@color/white"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:id="@+id/dairy_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dairy"
                    android:layout_marginTop="3dp"
                    android:textSize="13sp"
                    android:textColor="@color/white"
                    android:fontFamily="serif"
                    android:layout_gravity="center_horizontal"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/cakes"
                android:layout_width="80dp"
                android:translationZ="3dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_height="100dp"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                android:background="@drawable/layout_background"
                android:backgroundTint="@color/creative_yellow_dark">
                <ImageView
                    android:id="@+id/cakes_image"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/sweets"
                    app:tint="@color/white"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:id="@+id/cakes_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cakes"
                    android:layout_marginTop="3dp"
                    android:textSize="13sp"
                    android:textColor="@color/white"
                    android:fontFamily="serif"
                    android:layout_gravity="center_horizontal"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/desserts"
                android:layout_width="80dp"
                android:translationZ="3dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="15dp"
                android:layout_height="100dp"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                android:background="@drawable/layout_background"
                android:backgroundTint="@color/creative_yellow_dark">
                <ImageView
                    android:id="@+id/desserts_image"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/desserts"
                    app:tint="@color/white"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:id="@+id/desserts_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Desserts"
                    android:layout_marginTop="3dp"
                    android:textSize="13sp"
                    android:textColor="@color/white"
                    android:fontFamily="serif"
                    android:layout_gravity="center_horizontal"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/combo"
                android:layout_width="80dp"
                android:translationZ="3dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_height="100dp"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                android:background="@drawable/layout_background"
                android:backgroundTint="@color/creative_yellow_dark">
                <ImageView
                    android:id="@+id/combo_image"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/others"
                    app:tint="@color/white"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:id="@+id/combo_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Combo"
                    android:layout_marginTop="3dp"
                    android:textSize="13sp"
                    android:textColor="@color/white"
                    android:fontFamily="serif"
                    android:layout_gravity="center_horizontal"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/others"
                android:layout_width="80dp"
                android:translationZ="3dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="15dp"
                android:layout_height="100dp"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                android:background="@drawable/layout_background"
                android:backgroundTint="@color/creative_yellow_dark">
                <ImageView
                    android:id="@+id/others_image"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/extras"
                    app:tint="@color/white"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:id="@+id/others_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Others"
                    android:layout_marginTop="3dp"
                    android:textSize="13sp"
                    android:textColor="@color/white"
                    android:fontFamily="serif"
                    android:layout_gravity="center_horizontal"/>

            </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/horizontal_menu_scroll_view"
        android:layout_marginBottom="10dp">
        <androidx.recyclerview.widget.RecyclerView
            android:visibility="visible"
            android:id="@+id/menu_item_recycle_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <ProgressBar
            android:id="@+id/menu_item_progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:indeterminateTint="@color/smoky_black"/>
        <LinearLayout
            android:id="@+id/no_food_item_found"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/horizontal_menu_scroll_view"
            android:orientation="vertical"
            android:layout_gravity="center">
            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                app:tint="@color/smoky_black"
                android:src="@drawable/sorry"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No data found..."
                android:textSize="14sp"
                android:textColor="@color/smoky_black"
                android:fontFamily="serif"
                android:layout_gravity="center"/>
        </LinearLayout>
    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/shop_Item_Names_Text"
        android:visibility="gone"
        android:textColor="@color/white"/>

</RelativeLayout>