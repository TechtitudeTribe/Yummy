<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".AboutUsFragment">

    <LinearLayout
        android:id="@+id/about_us_header"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:orientation="vertical"
        android:background="@drawable/layout_background"
        android:backgroundTint="@color/smoky_black"
        android:translationZ="5dp"
        android:layout_margin="10dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:src="@drawable/company_logo"/>
    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/about_us_header"
        android:id="@+id/about_company_logo"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="80dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/layout_background"
            android:backgroundTint="@color/creative_yellow_dark"
            android:translationZ="3dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-: Our Apps :-"
                android:textColor="@color/white"
                android:fontFamily="serif"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/app_icon_list"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="35dp"
                android:layout_marginBottom="10dp"/>
            <ProgressBar
                android:id="@+id/about_progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:indeterminateTint="@color/white"/>
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/about_us_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/left_corners"
        android:translationZ="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_above="@+id/social_media_layout"
        android:layout_toRightOf="@+id/about_company_logo"
        android:layout_marginBottom="10dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">
            <TextView
                android:id="@+id/about_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="About"
                android:paddingLeft="15dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:fontFamily="serif"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/smoky_black"
                android:justificationMode="inter_word"/>
            <TextView
                android:layout_toRightOf="@+id/about_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Us"
                android:paddingRight="15dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:fontFamily="serif"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/creative_yellow_dark"
                android:justificationMode="inter_word"/>
        </RelativeLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Tectitude tribe is founded by a group of students with a vision of providing an easier way to help others and transform their ideas into real world , so that they shall not feel that setting up a start-up is a rocket science. It's motive is also to promote make in India initiative.\nCurrently , this group is working with six innovative ideas and try to implement them into the real world, so that young entrepreneurs around the india may get help.The start-ups which are being implemented under this organisation are 'Aadharshila', 'ShilpArt', 'DrugAbuse', 'HandyCart'. Sooner more start-ups would be added to our organization"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingBottom="20dp"
                android:fontFamily="serif"
                android:textSize="14sp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:justificationMode="inter_word"/>
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/social_media_layout"
        android:layout_toRightOf="@+id/about_company_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="80dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">
            <ImageView
                android:id="@+id/about_gmail"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/email"
                app:tint="@color/smoky_black"
                android:translationZ="5dp"
                android:layout_margin="5dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/about_facebook"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_margin="5dp"
                android:src="@drawable/facebook"
                android:translationZ="5dp"
                app:tint="@color/smoky_black" />

            <ImageView
                android:id="@+id/about_phone"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/phone_call"
                app:tint="@color/smoky_black"
                android:translationZ="5dp"
                android:layout_margin="5dp"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>