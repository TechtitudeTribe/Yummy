<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/my_addresses_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="25dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp">
        <TextView
            android:id="@+id/my_addresses_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/creative_green"
            android:text="House No. , Town, City - 000000"
            android:textColor="@color/white"
            android:paddingLeft="15dp"
            android:fontFamily="serif"
            android:textSize="15sp"
            android:paddingRight="15dp"
            android:paddingTop="15dp"
            android:paddingBottom="30sp"/>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:translationZ="2dp"
        android:translationY="25dp"
        android:layout_marginRight="40dp"
        android:layout_alignBottom="@+id/my_addresses_card">
        <ImageView
            android:id="@+id/my_addresses_delete"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="5dp"
            android:background="@drawable/circular_background"
            android:backgroundTint="@color/white"
            android:translationZ="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/ic_delete"
            app:tint="@color/smoky_black"/>
    </LinearLayout>

</RelativeLayout>