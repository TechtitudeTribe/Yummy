<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp">
    <TextView
        android:id="@+id/cart_address_layout_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="House/Street No, City/Town/Village, State - 000000"
        android:textColor="@color/title_background"
        android:textSize="14sp"
        android:fontFamily="serif"
        android:paddingRight="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:paddingLeft="25dp"
        android:paddingTop="20dp"
        android:background="@drawable/text_background"
        android:backgroundTint="@color/white"
        android:translationZ="3dp"
        android:paddingBottom="20dp"/>
    <androidx.cardview.widget.CardView
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:translationZ="5dp"
        android:layout_marginLeft="10dp"
        app:cardCornerRadius="18dp"
        android:layout_centerVertical="true"
        android:background="@drawable/circular_background"
        android:backgroundTint="@color/white">
        <TextView
            android:id="@+id/cart_address_layout_number"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="1"
            android:textSize="18sp"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@color/creative_green"
            android:fontFamily="serif"
            android:layout_centerInParent="true"/>
    </androidx.cardview.widget.CardView>
</RelativeLayout>