<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:visibility="visible"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_centerInParent="true"
    android:id="@+id/need_help_relative_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true">
            <ImageView
                android:layout_marginTop="30dp"
                android:layout_gravity="center_horizontal"
                app:tint="@color/smoky_black"
                android:layout_marginBottom="20dp"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/trouble"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Having Trouble?\nContact Us!!!"
                android:textSize="16sp"
                android:fontFamily="serif"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/smoky_black"
                android:gravity="center"
                android:layout_marginBottom="5dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal">
                <ImageView
                    android:id="@+id/need_help_phone"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/phone_call"
                    android:layout_margin="10dp"
                    android:translationZ="5dp"
                    android:background="@drawable/circular_background"
                    app:tint="@color/creative_yellow_dark"/>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="@color/smoky_black"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="50dp"
                android:layout_marginLeft="60dp"/>
            <TextView
                android:id="@+id/need_help_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Drop a message"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:fontFamily="serif"
                android:background="@drawable/text_background"
                android:backgroundTint="@color/creative_yellow_dark"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_marginBottom="30dp"
                android:translationZ="5dp"
                android:layout_gravity="center_horizontal"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"/>
        </LinearLayout>



</RelativeLayout>