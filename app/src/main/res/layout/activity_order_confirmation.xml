<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrderConfirmationActivity">

    <TextView
        android:id="@+id/order_confirmation_item_image_url"
        android:layout_width="wrap_content"
        android:visibility="invisible"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/order_confirmation_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order Confirmation"
        android:textColor="@color/smoky_black"
        android:textSize="23sp"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:fontFamily="serif"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="65dp"
        android:layout_below="@+id/order_confirmation_header">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/order_confirmation_tag"
            app:tint="@color/title_background"
            android:layout_marginLeft="5dp"
            android:scaleType="fitXY"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="5dp"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/order_confirmation_tag"
            app:tint="@color/white"
            android:scaleType="fitXY"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="10dp"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/order_confirmation_logo_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="30dp"
            app:cardCornerRadius="20dp">
            <ImageView
                android:id="@+id/order_confirmation_item_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="fitXY" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/order_confirmation_item_names"
            android:layout_below="@+id/order_confirmation_logo_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Item Names"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/smoky_black"
            android:textSize="15sp"
            android:textStyle="bold"
            android:fontFamily="serif"/>
        <TextView
            android:id="@+id/order_confirmation_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order Placed On \n15 March"
            android:textSize="14sp"
            android:textColor="@color/smoky_black"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="30dp"
            android:fontFamily="serif"/>
        <TextView
            android:id="@+id/order_confirmation_item_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/order_confirmation_item_names"
            android:text="Total Description"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:textColor="@color/smoky_black"
            android:textSize="14sp"
            android:fontFamily="serif"/>
        <LinearLayout
            android:id="@+id/order_confirmation_item_quantity_layout"
            android:layout_width="wrap_content"
            android:layout_below="@+id/order_confirmation_item_description"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quantity : "
                android:layout_marginLeft="30dp"

                android:textColor="@color/smoky_black"
                android:textSize="14sp"
                android:fontFamily="serif"/>
            <TextView
                android:id="@+id/order_confirmation_item_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/order_confirmation_item_description"
                android:text="1"
                android:layout_marginRight="30dp"
                android:textColor="@color/smoky_black"
                android:textSize="14sp"
                android:fontFamily="serif"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/order_confirmation_item_quantity_layout"
            android:text="Payment Method"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:textColor="@color/smoky_black"
            android:textSize="15sp"
            android:textStyle="bold"
            android:fontFamily="serif"/>
        <RadioGroup
            android:id="@+id/payment_method"
            android:layout_below="@+id/order_confirmation_item_quantity_layout"
            android:layout_width="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cash"
                android:fontFamily="serif"
                android:buttonTint="@color/creative_yellow_dark"
                android:text="Cash on Delivery"
                android:textSize="14sp"/>
            <RadioButton
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/upi"
                android:buttonTint="@color/creative_yellow_dark"
                android:text="Pay via UPI"
                android:fontFamily="serif"
                android:textSize="14sp"/>
        </RadioGroup>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/payment_method"
            android:text="Order Type"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:textColor="@color/smoky_black"
            android:textSize="15sp"
            android:textStyle="bold"
            android:fontFamily="serif"/>
        <RadioGroup
            android:id="@+id/order_type"
            android:layout_below="@+id/payment_method"
            android:layout_width="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dine_in"
                android:fontFamily="serif"
                android:buttonTint="@color/creative_yellow_dark"
                android:text="Dine In"
                android:textSize="14sp"/>
            <RadioButton
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Deliver"
                android:buttonTint="@color/creative_yellow_dark"
                android:text="Deliver"
                android:fontFamily="serif"
                android:textSize="14sp"/>
        </RadioGroup>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="80dp">
            <LinearLayout
                android:id="@+id/dotted_linear_layout"
                android:translationX="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_horizontal_dots"
                    app:tint="@color/title_background"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:translationX="-6dp"
                    android:src="@drawable/ic_horizontal_dots"
                    app:tint="@color/title_background"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:translationX="-12dp"
                    android:src="@drawable/ic_horizontal_dots"
                    app:tint="@color/title_background"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:translationX="-18dp"
                    android:src="@drawable/ic_horizontal_dots"
                    app:tint="@color/title_background"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:translationX="-24dp"
                    android:src="@drawable/ic_horizontal_dots"
                    app:tint="@color/title_background"/>
            </LinearLayout>
            <TextView
                android:layout_below="@+id/dotted_linear_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total"
                android:textColor="@color/smoky_black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginLeft="30dp"
                android:fontFamily="serif"/>
            <TextView
                android:id="@+id/order_confirmation_price"
                android:layout_below="@+id/dotted_linear_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="000"
                android:textColor="@color/creative_yellow_dark"
                android:drawableTint="@color/creative_yellow_dark"
                android:drawablePadding="3dp"
                android:drawableLeft="@drawable/ic_india_rupee_symbol"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp"
                android:fontFamily="serif"/>
        </RelativeLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/order_confirmation_proceed_to_pay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Proceed To Pay"
        android:textSize="16sp"
        android:visibility="visible"
        android:background="@drawable/text_background"
        android:backgroundTint="@color/creative_yellow_dark"
        android:textColor="@color/white"
        android:fontFamily="serif"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:translationZ="5dp"
        android:layout_marginBottom="10dp"/>
    <TextView
        android:visibility="gone"
        android:id="@+id/order_confirmation_place_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Place Order"
        android:textSize="16sp"
        android:background="@drawable/text_background"
        android:backgroundTint="@color/creative_yellow_dark"
        android:textColor="@color/white"
        android:fontFamily="serif"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:translationZ="5dp"
        android:layout_marginBottom="10dp"/>

</RelativeLayout>